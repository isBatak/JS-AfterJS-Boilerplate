{
  "name": "js-afterjs-boilerplate",
  "version": "1.0.0",
  "description": "nextjs react boilerplate",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest",
    "dev": "node server",
    "build": "next build",
    "start": "cross-env NODE_ENV=production node server.js",
    "lint": "eslint --ignore-path .gitignore app config test .storybook",
    "precommit": "lint-staged",
    "analyze": "cross-env ANALYZE=1 next build",
    "storybook": "start-storybook -p 6006 -s ./",
    "build-storybook": "build-storybook"
  },
  "author": "ivica.batinic@infinum.co",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=8.6.0"
  },
  "lint-staged": {
    "**/*.js": "lint"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "<rootDir>/shim.js"
    ],
    "roots": [
      "<rootDir>/__tests__/"
    ]
  },
  "dependencies": {
    "bugsnag": "^2.0.1",
    "bugsnag-js": "^4.0.0",
    "dotenv": "^4.0.0",
    "emotion": "^8.0.8",
    "emotion-server": "^8.0.8",
    "express": "^4.16.2",
    "formik": "^0.10.5",
    "htmlescape": "^1.1.1",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.4",
    "mobx": "^3.4.1",
    "mobx-jsonapi-store": "^4.0.0",
    "mobx-react": "^4.3.3",
    "next": "^4.2.3",
    "next-routes": "^1.2.0",
    "path-match": "^1.2.4",
    "prop-types": "^15.6.0",
    "raf": "^3.4.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-emotion": "^8.0.8",
    "unhandled-rejection": "^1.0.0"
  },
  "devDependencies": {
    "@infinumjs/eslint-config-react": "^1.0.0",
    "@storybook/addon-actions": "^3.3.9",
    "@storybook/addon-links": "^3.3.9",
    "@storybook/react": "^3.3.9",
    "babel-eslint": "^8.2.1",
    "babel-plugin-emotion": "^8.0.6",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "cross-env": "^5.1.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.15.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "husky": "^0.14.3",
    "jest": "^22.0.6",
    "lint-staged": "^6.0.0",
    "mobx-store-devtools": "^0.2.0",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "^16.0.0",
    "request": "^2.83.0",
    "webpack-bundle-analyzer": "^2.9.2"
  }
}
